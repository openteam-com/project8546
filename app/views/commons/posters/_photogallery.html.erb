<li class='item'>
  <div class="title">
    <%= link_to info['title'], info['url'], target: '_blank' %>
  </div>
  <div class="image">
    <ul>
      <% info['image'].each_with_index do |image, index| %>
        <% if index == 0 %>
          <li class='photo'>
            <%= image_tag image, style: 'float: left' %>
          </li>
        <% else %>
          <li class='photo'>
            <%= image_tag image, size: '116x78', style: 'float: left' %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</li>
